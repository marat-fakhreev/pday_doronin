$fontOne = 'Roboto Slab'
$fontTwo = 'Roboto'
$fontThree = 'Roboto Condensed'

h1
  font-family: $fontTwo
  font-size: 63px
  font-weight: 700
  text-transform: uppercase
  letter-spacing: 4px
  line-height: 59px

h2
  @extend h1
  font-size: 48px
  font-weight: 400
  text-transform: none

h3
  font-family: $fontTwo
  font-size: 17px
  font-weight: 300
  line-height: 1.2

h4
  font-family: $fontTwo
  font-size: 30px
  margin: 0 0 10px 0

span
p
a
  font-size: 17px
  font-family: $fontTwo
  font-weight: 300
  color: #fff

p
  line-height: 1.3

  &.center
    text-align: center
