::-webkit-input-placeholder
   color: #fff
   font-weight: 100

:-moz-placeholder
   color: #fff
   font-weight: 100

::-moz-placeholder
   color: #fff
   font-weight: 100

:-ms-input-placeholder
   color: #fff
   font-weight: 100

form
  margin: 0

  .form-inner
    clearfix()
    height: 40px
    margin: 20px 0 0 0

  input[type='text']
  input[type='email']
  input[type='submit']
  input[type='tel']
  .button
    background-color: #fff
    border: none
    width: 100%
    height: 100%
    box-sizing: border-box
    color: $greyColor
    padding: 0 20px
    line-height: 36px
    font-size: 15px
    border-radius: 8px
    border: 2px solid rgba(red, 0.3)

    span
      font-family: $fontOne
      font-weight: 400
      font-size: 15px
      color: #707070

  input[type='text']
  input[type='email']
  input[type='tel']
    font-weight: 100
    font-family: $fontOne
    color: #fff
    background-color: #f3484e
    border: 2px solid rgba(#fff, 0.6)

    &::after
      font-family: $fontOne

  .button
    cursor: pointer

    &:hover
      border: 2px solid rgba(#fff, 0.6)
      background-color: transparent
      color: #fff

      *
        color: #fff
