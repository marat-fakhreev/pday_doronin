#doronin
  .head
    background-color: $redLightColor
    position: relative
    z-index: 10

    .head-inner
      padding: 35px 0 45px 0
      box-sizing: border-box

    .head-text
      font-family: $fontThree
      font-size: 22px
      margin: 10px 0 0 0

.content
  .content-inner
    height: 525px
    width: 100%
    position: relative

    &::after
      content: ''
      top: 0
      left: 0
      height: 100%
      width: 100%
      position: absolute
      z-index: 10
      background-color: rgba($greyColor, 0.8)

    .bg
      position: absolute
      top: 0
      left: 0
      height: 100%
      width: 100%
      background-image: url("../images/bg.jpg")
      background-size: cover
      background-repeat: no-repeat
      background-position: center center
      filter: blur(12px)
      -webkit-filter: blur(12px)
      -moz-filter: blur(12px)
      -o-filter: blur(12px)
      -ms-filter: blur(12px)
      // filter: url(blur.svg#blur)

    .doronin
      background-image: url("../images/doronin.png")
      height: 480px
      width: 375px
      position: absolute
      bottom: 0
      left: -150px

      .logo
        background-image: url("../images/logo.png")
        width: 155px
        height: 43px
        position: absolute
        bottom: 5px
        right: 80px

    .information
      margin: 0 0 0 294px
      width: 730px
      height: 100%
      position: relative

    .information-inner
      position: absolute
      bottom: 60px
      width: 100%

      .items
        clearfix()

      .item
        col(1/2, cycle: 2)
        margin: 0 0 35px 0

        .circle
          width: 60px
          height: 60px
          box-sizing: border-box
          border-radius: 50%
          border: 3px solid #fff
          line-height: 55px
          text-align: center
          margin: 0 15px 0 0
          float: left
          font-size: 30px
          font-family: $fontOne
          font-weight: 300
          color: #fff

        p
          margin: 8px 0 0 0

      .email-form
        display: block
        padding: 45px 50px
        width: 100%
        background-color: $redLightColor
        border-radius: 30px

        .title
          margin: 0
          font-size: 24px
          font-weight: 400
          font-family: $fontOne
          color: #fff

        p
          margin: 10px 0
          font-size: 15px
          font-family: $fontThree

        .col
          col(1/2)

          *
            height: 40px

        .button
          .fa
            margin: 0 10px 0 0
            color: #707070

          &:hover
            .fa
              color: #fff

  .footer-inner
    box-sizing: border-box
    border-top: 2px solid $redLightColor
    background-color: $greyColor
    padding: 50px 0 70px 0

    p
      font-size: 14px
      width: 550px

    .footer-left
      width: 600px
      float: left

    .footer-right
      width: 424px
      float: right
      position: relative
      top: -5px

      .social-block
        clearfix()
        margin: 0 0 18px 0

      .social
        col(1/2)
        height: 24px
        color: #fff

      a
        display: block
        width: 100%
        height: 100%

        &:hover
          span
            text-decoration: none

      .icon
        margin: -20px 10px 0 0
        font-size: 24px
        float: left

      span
        float: left
        line-height: 24px
        text-decoration: underline

      .mobile-form
        .col
          col(1/2)

          *
            height: 40px

        .form-inner
          margin: 10px 0 0 0

        .user-phone-container
          position: relative

          &::after
            content: '+7'
            position: absolute
            top: 13px
            left: 38px
            font-size: 14px
            font-weight: 100
            color: #fff

        .fa
          position: absolute
          z-index: 10
          color: #fff
          top: 12px
          left: 12px
          font-size: 20px

        .user-phone
          background-color: #484848
          position: relative
          padding: 0 0 0 57px
          letter-spacing: 1px
          font-size: 14px
          line-height: 24px

        .button
          padding: 0 10px
          border: 2px solid rgba(#333, 0.6)

          &:hover
            border: 2px solid rgba(#fff, 0.6)

            span
              color: #fff

          span
            color: $redLightColor
            text-decoration: none
            line-height: 36px
            display: block
            text-align: center
            width: 100%
